#!/bin/sh
# postinst script for rubinius
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

BIN_PATH="/usr/bin"
RBX_PATH="/opt/rubinius"

case "$1" in
    configure)
        update-alternatives --install $BIN_PATH/gem   gem   $RBX_PATH/bin/rbx 1
        update-alternatives --install $BIN_PATH/irb   irb   $RBX_PATH/bin/rbx 1
        update-alternatives --install $BIN_PATH/rake  rake  $RBX_PATH/bin/rbx 1
        update-alternatives --install $BIN_PATH/rbx   rbx   $RBX_PATH/bin/rbx 1
        update-alternatives --install $BIN_PATH/rdoc  rdoc  $RBX_PATH/bin/rbx 1
        update-alternatives --install $BIN_PATH/ri    ri    $RBX_PATH/bin/rbx 1
        update-alternatives --install $BIN_PATH/ruby  ruby  $RBX_PATH/bin/rbx 1
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
